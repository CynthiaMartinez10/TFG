import numpy as np
from scipy.optimize import fsolve

B=1.056#es el cociente lambda_i y lambda_i+1

def ecuacionL(x):
    return (1-1/(x+1)**2)/(1-1/x**2) - B
solucion=fsolve(ecuacionL, x0=2)
print("La soluci贸n para Lyman es:", solucion[0])#soluci贸n para el caso Lyman

def ecuacionB(x):
    return ((1/4)-1/(x+1)**2)/((1/4)-1/x**2) - B
solucion=fsolve(ecuacionB, x0=4)
print("La soluci贸n para Balmer es:", solucion[0])#soluci贸n para el caso Balmer
